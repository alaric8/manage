{
  "appId": "com.yourapp.id",
  "productName": "CE0",
  "directories": {
    "output": "build" // 打包输出目录
  },
  "files": [
    "dist/**",
    "electron/preload.js", // 包含构建后的前端文件
    "electron/main.js" // 包含 Electron 主文件
  ],
  "extraMetadata": {
    "main": "electron/main.js" // 指定入口文件
  },
  "win": {
    "target": "nsis" // Windows 下的目标安装包格式
  },
  "mac": {
    "target": "dmg" // macOS 下的目标安装包格式
  },
  "linux": {
    "target": "AppImage" // Linux 下的目标安装包格式
  },
  "electronVersion": "33.2.0", // 指定 Electron 版本
  "publish": [
    {
      "provider": "github",
      "owner": "alaric8", // 你的 GitHub 用户名
      "repo": "manage", // 你的仓库名称
      "token": "${GH_TOKEN}", // 使用 GitHub Token，确保已经配置 GitHub Secrets
      "releaseType": "draft", // 设置为 draft 或发布，避免覆盖
      "prerelease": false // 如果是预发布版本，设置为 true
    }
  ]
}